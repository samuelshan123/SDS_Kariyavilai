<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Covid19.StateDataActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvColumnHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="false"
        app:layout_gravity="center_horizontal">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStateNameHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:fontFamily="sans-serif-condensed"
                android:text="State Name"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvConfirmedHeading"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="clip_vertical|center_horizontal"
                    android:text="Confirmed"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/tvActiveHeading"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="clip_vertical|center_horizontal"
                    android:text="Active"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/tvDeathsHeading"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="clip_vertical|center_horizontal"
                    android:textColor="#ff0000"
                    android:text="Deaths"
                    app:autoSizeTextType="uniform" />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStateList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>