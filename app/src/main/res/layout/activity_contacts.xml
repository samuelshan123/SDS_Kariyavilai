<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Contacts">


    <TableLayout
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="7dp"
        >


        <TableRow
            android:elevation="7dp"
            android:padding="5dp"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="226dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"

                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/sds"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxWidth="220sp"
                android:text="Pr.Titus Samuel "
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/pastor"
                android:onClick="pascall"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call now" />


        </TableRow>

        <TableRow
            android:elevation="7dp"
            android:padding="5dp"
            android:background="@drawable/background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="226dp"
            android:layout_marginBottom="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/sds"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxWidth="220sp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Sis.Rajakumari" />

            <Button
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/sister"
                android:padding="5dp"
                android:onClick="praunty"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call now" />


        </TableRow>
        <TableRow
            android:elevation="7dp"
            android:padding="5dp"
            android:background="@drawable/background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="226dp"
            android:layout_marginBottom="10dp">



            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/sds"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxWidth="220sp"
                android:text="Bro.Vinu"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/brov"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call now" />


        </TableRow>

        <TableRow
            android:padding="5dp"
            android:background="@drawable/background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="226dp"
            android:layout_marginBottom="10dp"
            android:elevation="7dp"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/sds"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxWidth="220sp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Bro.Rajesh" />

            <Button
                android:id="@+id/bror"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:text="Call now" />


        </TableRow>

    </TableLayout>
</LinearLayout>